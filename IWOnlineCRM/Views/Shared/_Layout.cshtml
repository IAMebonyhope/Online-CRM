<script src="~/Content/datatables.net/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="~/Content/datatables.net-bs/js/dataTables.bootstrap.min.js" type="text/javascript"></script>
@RenderSection("scripts", required: false)