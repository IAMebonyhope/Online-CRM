    <link href="~/Content/vendor/nucleo/css/nucleo.css" rel="stylesheet">
    <link href="~/Content/vendor/fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet">
    <!-- Argon CSS -->
    <link type="text/css" href="~/Content/css/argon.css?v=1.0.0" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/datatables.net-bs/css/dataTables.bootstrap.min.css">

    <link rel="apple-touch-icon" sizes="57x57" href="~/Content/favicon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="~/Content/favicon/apple-icon-60x60.png">
